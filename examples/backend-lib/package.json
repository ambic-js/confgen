{
  "scripts": {
    "confgen": "npx ts-node --transpile-only ../../src/index.ts vite library:BackendLib node:fs apollo:server",
    "build:vite": "vite build",
    "build": "rm -rf dist/*; yarn run build:generate; yarn run build:vite",
    "build:generate": "rm -f ./src/__generated__/*; graphql-codegen",
    "all": "yarn; yarn build; echo all"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^2.6.2",
    "@graphql-codegen/typescript-resolvers": "^2.5.2",
    "graphql": "^16.3.0",
    "vite": "^2.8.5",
    "vite-plugin-commonjs-externals": "^0.1.1"
  },
  "files": [
    "dist"
  ],
  "main": "./dist/index.umd.js",
  "module": "./dist/index.es.js",
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.umd.js"
    }
  }
}